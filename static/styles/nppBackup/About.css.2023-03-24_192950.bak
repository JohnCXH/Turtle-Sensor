@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');

/* Navigation Bar */

.nav ul {
  position: fixed;
  top: 0;
  width: 100%;

  list-style-type: none;
  padding: 0;
  margin-top: 0;
  margin-left: 0;
  margin-right: 0;
  overflow: hidden;
  background-color: #364b24;
  width:1400px;
  height: 50px;
}

.navigationBar li{
  float: left;

}

.navigationBar li a {
    font-family: 'Poppins', sans-serif;
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

/* Change the link color to #111 (black) on hover */
.navigationBar li a:hover {
  background-color: #111;
}

.buttonNav {
  border: none;
  background-color: rgba(240, 248, 255, 0);
  color: #fff;
  font-size: 16px;
}

/* About Page */

body{
  background-color:rgb(106, 145, 88);
}

.aboutTitle{
    font-family: 'Poppins', sans-serif;
    font-weight: 800;
    text-align: center;
    font-size: 50px;
    color: #f9f9f9;
    margin-right: 100px;
    margin-top: 50px;
    background-image: url('../static/favicons/turtle.jpg');
    background-size: cover;
    background-position: center;
    
    height: 500px;
    width: 100%;
    
  }
  
  .aboutTitle p{
    font-size: 14px;
    font-weight: 500;
    margin-left: 55%;
    margin-right: 2%;
    text-align: right;
    
  }
  
  .instructions {
    font-family: Arial, Helvetica, sans-serif;
    color: white;
    font-size:20px;
    margin-left: 30px;
  }
  
  .infoIns ol li{
    font-family: 'Poppins', sans-serif;
    color: white;
    font-size: 13px;
    margin-left: 30px;
    margin-top: 5px;
  }
  
  .pic{
    height: 194px;
    width: 384px;
    margin-left: 50px;
    padding: 1px;
    border-radius: 5px;
  }
  
  .about-page {
    width: 80%;
    margin: 0 auto;
    text-align: center;
    padding: 50px 0;
    font-family: Arial, sans-serif;
    color: #333;
    background-color: #f9f9f9;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 30px;
  }

  .about-text {
    width: 80%;
    margin: 0 auto;
    text-align: left;
    font-size: 1.2rem;
    line-height: 1.6;
    background-color: #fff;
    padding: 30px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
  }