@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');

body {
    font-family: 'Poppins', sans-serif;
}

h1 {
    font-size: 22px;
    font-weight: 600;
    position: relative;
    text-align: center;
    line-height: 41px;
    padding-top: 10px;
    color: #f9f9f9;
    margin-bottom: 30px;
    background-color: #364b24;
    
    width:100%;
    height:50px;

}

h2{
    margin-top: 5%;
    margin-left: 43%;
}

form {
    margin-left: 27%;
    width: 500px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    padding: 40px;
}

input[type="text"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

input[type="checkbox"] {
    margin-bottom: 10px;
}

input[type="submit"] {
    margin-left: 440px;
    background-color: #439ca6;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #3e8e41;
}

p {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 10px;
}

table {
    width: 90%;
    margin-left: 5%;
    padding: 0.3em;
    background: rgba(71, 123, 8, 0.795);
    column-count: 3;
    border-collapse: collapse;
    border: solid 2px rgb(11, 106, 130);
}

table tr th{
    padding: 0px 15px;
    border: solid 2px rgb(255, 255, 255);
}

table tr td{
    padding: 0px 15px;
    border: solid 2px rgb(255, 255, 255);
    
}

